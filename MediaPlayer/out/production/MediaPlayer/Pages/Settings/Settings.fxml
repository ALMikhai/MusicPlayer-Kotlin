<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Pages.Settings.SettingsController">
   <children>
      <BorderPane layoutX="-3.0" prefHeight="200.0" prefWidth="500.0">
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="44.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onApplyClick" text="Apply">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="500.0">
                     <children>
                        <Label text="Main directory path">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField id="directoryPathTextBox" prefHeight="25.0" prefWidth="360.0" promptText="Directory path..." />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
